{
	"extends": "./tsconfig.shared.json",
	"compilerOptions": {
		"outDir": "transpile",
		"jsx": "react-jsx",
		"baseUrl": "./src/renderer",
		"paths": {
			"@component/*": ["components/*"],
			"@hook/*": ["hooks/*"],
			"@state/*": ["state/*"],
			"@util/*": ["utils/*"],
			"@icon/*": ["icons/*"],
			"@interface/*": ["../shared/interface/*"],
			"@enum/*": ["../shared/enum/*"]
		}
	},
	"include": ["src/renderer/**/*"]
}
