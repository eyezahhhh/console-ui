{
	"name": "console-ui",
	"version": "v0.0.16",
	"description": "Console-style UI for Moonlight",
	"main": "transpile/main/main.js",
	"scripts": {
		"dev:main": "npm run build:main && wait-on tcp:5173 && cross-env NODE_ENV=development ${ELECTRON_BIN:-electron} .",
		"dev:renderer": "vite",
		"dev": "concurrently -k \"npm run dev:main\" \"npm run dev:renderer\"",
		"build:main": "rimraf transpile/main && rimraf transpile/shared && tsc -p tsconfig.main.json && tsc-alias -p tsconfig.main.json",
		"build:renderer": "rimraf transpile/renderer && tsc --noEmit -p tsconfig.renderer.json && vite build",
		"build:electron": "rimraf dist && electron-builder",
		"build": "npm run build:main && npm run build:renderer && npm run build:electron",
		"format": "prettier src --write"
	},
	"keywords": [],
	"author": "eyezah <console-ui@eyezah.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/bonjour": "^3.5.13",
		"@types/command-exists": "^1.2.3",
		"@types/electron": "^1.4.38",
		"@types/node": "^24.3.0",
		"@types/node-forge": "^1.3.14",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"electron": "^37.3.0",
		"electron-builder": "^26.0.12",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"sass": "^1.90.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vite-plugin-svgr": "^4.3.0",
		"wait-on": "^8.0.4"
	},
	"build": {
		"appId": "com.eyezah.consoleui",
		"productName": "Console UI",
		"files": [
			"transpile/**/*",
			"assets/**/*",
			"package.json"
		],
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm"
			]
		},
		"publish": [
			{
				"provider": "github",
				"owner": "eyezahhhh",
				"repo": "console-ui",
				"releaseType": "draft"
			}
		]
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@mui/icons-material": "^7.3.1",
		"@mui/material": "^7.3.1",
		"axios": "^1.11.0",
		"bonjour": "^3.5.0",
		"command-exists": "^1.2.9",
		"electron-updater": "^6.6.2",
		"fast-xml-parser": "^5.2.5",
		"node-forge": "^1.3.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-resize-detector": "^12.3.0",
		"react-router": "^7.8.2",
		"zustand": "^5.0.7"
	},
	"volta": {
		"node": "22.18.0"
	}
}
