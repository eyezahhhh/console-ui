{
	"extends": "./tsconfig.shared.json",
	"compilerOptions": {
		"outDir": "transpile",
		"paths": {
			"@/*": ["main/*"],

			"@enum/*": ["shared/enum/*"],
			"@interface/*": ["shared/interface/*"],
			"@type/*": ["shared/type/*"],
			"@util/*": ["shared/util/*"],
			"@shared/*": ["shared/*"]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"include": ["src/main/**/*", "src/shared/**/*"]
}
